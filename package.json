{
  "name": "namecraft",
  "displayName": "NameCraft - Ai变量命名",
  "description": "AI驱动的中英文代码命名助手，让变量命名变得简单优雅",
  "version": "0.1.0",
  "publisher": "namecraft",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Machine Learning"
  ],
  "keywords": [
    "naming",
    "chinese",
    "english",
    "variable",
    "function",
    "智能命名",
    "代码助手"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "namecraft.quickNaming",
        "title": "快速命名",
        "category": "NameCraft", 
        "icon": "$(symbol-variable)"
      },
      {
        "command": "namecraft.translateSelection",
        "title": "翻译选中文本",
        "category": "NameCraft",
        "icon": "$(globe)"
      },
      {
        "command": "namecraft.quickCamelCase",
        "title": "转换为小驼峰 (camelCase)",
        "category": "NameCraft",
        "icon": "$(symbol-variable)"
      },
      {
        "command": "namecraft.quickPascalCase",
        "title": "转换为大驼峰 (PascalCase)",
        "category": "NameCraft",
        "icon": "$(symbol-class)"
      },
      {
        "command": "namecraft.quickSnakeCase",
        "title": "转换为下划线 (snake_case)",
        "category": "NameCraft",
        "icon": "$(symbol-function)"
      },
      {
        "command": "namecraft.quickUnderscoreCase",
        "title": "转换为前下划线 (_snake_case)",
        "category": "NameCraft",
        "icon": "$(symbol-constant)"
      },
      {
        "command": "namecraft.quickConstantCase",
        "title": "转换为常量 (CONSTANT_CASE)",
        "category": "NameCraft",
        "icon": "$(symbol-enum)"
      },
      {
        "command": "namecraft.quickReplace",
        "title": "智能替换为驼峰命名 (F2)",
        "category": "NameCraft",
        "icon": "$(replace-all)"
      }
    ],
    "submenus": [
      {
        "id": "namecraft.quickTransform",
        "label": "快速转换格式"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "namecraft.translateSelection",
          "when": "editorHasSelection",
          "group": "namecraft@1"
        },
        {
          "command": "namecraft.quickNaming", 
          "when": "editorTextFocus",
          "group": "namecraft@2"
        },
        {
          "submenu": "namecraft.quickTransform",
          "when": "editorHasSelection",
          "group": "namecraft@3"
        }
      ],
      "namecraft.quickTransform": [
        {
          "command": "namecraft.quickCamelCase",
          "when": "editorHasSelection"
        },
        {
          "command": "namecraft.quickPascalCase",
          "when": "editorHasSelection"
        },
        {
          "command": "namecraft.quickSnakeCase",
          "when": "editorHasSelection"
        },
        {
          "command": "namecraft.quickUnderscoreCase",
          "when": "editorHasSelection"
        },
        {
          "command": "namecraft.quickConstantCase",
          "when": "editorHasSelection"
        }
      ],
      "commandPalette": [
        {
          "command": "namecraft.quickNaming"
        },
        {
          "command": "namecraft.translateSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "namecraft.quickNaming",
        "key": "ctrl+alt+n", 
        "mac": "cmd+alt+n",
        "when": "editorTextFocus"
      },
      {
        "command": "namecraft.quickCamelCase",
        "key": "alt+1",
        "when": "editorHasSelection"
      },
      {
        "command": "namecraft.quickPascalCase", 
        "key": "alt+2",
        "when": "editorHasSelection"
      },
      {
        "command": "namecraft.quickSnakeCase",
        "key": "alt+3", 
        "when": "editorHasSelection"
      },
      {
        "command": "namecraft.quickUnderscoreCase",
        "key": "alt+4",
        "when": "editorHasSelection"
      },
      {
        "command": "namecraft.quickConstantCase",
        "key": "alt+5",
        "when": "editorHasSelection"
      },
      {
        "command": "namecraft.quickReplace",
        "key": "f2",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "NameCraft",
      "properties": {
        "namecraft.namingStyle": {
          "type": "string",
          "default": "camelCase",
          "enum": [
            "camelCase",
            "PascalCase", 
            "snake_case",
            "kebab-case"
          ],
          "description": "默认命名风格"
        },
        "namecraft.maxSuggestions": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 10,
          "description": "最大建议数量"
        },
        "namecraft.customRules": {
          "type": "object",
          "default": {},
          "description": "自定义快捷键规则",
          "properties": {
            "alt1": {
              "type": "object",
              "description": "Alt+1 快捷键规则"
            },
            "alt2": {
              "type": "object", 
              "description": "Alt+2 快捷键规则"
            },
            "alt3": {
              "type": "object",
              "description": "Alt+3 快捷键规则"
            },
            "alt4": {
              "type": "object",
              "description": "Alt+4 快捷键规则"
            },
            "alt5": {
              "type": "object",
              "description": "Alt+5 快捷键规则"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "clean": "rimraf out"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/namecraft/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/namecraft/vscode-extension/issues"
  },
  "homepage": "https://github.com/namecraft/vscode-extension#readme",
  "license": "MIT"
}