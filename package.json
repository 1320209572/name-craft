{
  "name": "namecraft",
  "displayName": "NameCraft - Ai变量命名",
  "description": "AI驱动的中英文代码命名助手，让变量命名变得简单优雅",
  "version": "0.1.0",
  "publisher": "namecraft",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Machine Learning"
  ],
  "keywords": [
    "naming",
    "chinese",
    "english",
    "variable",
    "function",
    "智能命名",
    "代码助手"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "namecraft.quickNaming",
        "title": "快速命名",
        "category": "NameCraft", 
        "icon": "$(symbol-variable)"
      },
      {
        "command": "namecraft.translateSelection",
        "title": "翻译选中文本",
        "category": "NameCraft",
        "icon": "$(globe)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "namecraft.translateSelection",
          "when": "editorHasSelection",
          "group": "namecraft"
        },
        {
          "command": "namecraft.quickNaming", 
          "when": "editorTextFocus",
          "group": "namecraft"
        }
      ],
      "commandPalette": [
        {
          "command": "namecraft.quickNaming"
        },
        {
          "command": "namecraft.translateSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "namecraft.quickNaming",
        "key": "ctrl+alt+n", 
        "mac": "cmd+alt+n",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "NameCraft",
      "properties": {
        "namecraft.namingStyle": {
          "type": "string",
          "default": "camelCase",
          "enum": [
            "camelCase",
            "PascalCase", 
            "snake_case",
            "kebab-case"
          ],
          "description": "默认命名风格"
        },
        "namecraft.maxSuggestions": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 10,
          "description": "最大建议数量"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "clean": "rimraf out"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/namecraft/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/namecraft/vscode-extension/issues"
  },
  "homepage": "https://github.com/namecraft/vscode-extension#readme",
  "license": "MIT"
}